base.css
/* Typography hierarchy for other elements */
/* 其他文字层级的排版，保证全局统一 */
h1 {
    font-size: 3rem;
    font-weight: normal;
    margin: 0;
    line-height: 1.2;
}

h2 {
    font-size: 2.5rem;
    font-weight: normal;
    margin: 0;
    line-height: 1.3;
}

p {
    font-size: 1rem;
    margin: 0;
    line-height: 1.5;
}

component.css
/* Simple card components for other pages */
/* 简单卡片组件（适用于其他页面） */
.simple-card {
    background-color: var(--color-light);
    border: 2px solid var(--color-dark);
    padding: 1.5rem;
    margin: 1rem;
    text-align: center;
    max-width: 300px;
    border-radius: 8px;
}

/* Card container using Flexbox */
/* 卡片容器：使用 Flex 布局，垂直排列 */
.card-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem; /* 卡片之间的间距 */
    padding: 1rem;
}

/* Button styles for other pages */
/* 通用按钮样式（用于其他页面） */
.button {
    padding: 10px 20px;
    border-radius: 5px;
    font-size: 1rem;
    border: none;
    cursor: pointer;
    text-align: center;
    display: inline-block;
    text-decoration: none; /* 去掉下划线 */
    transition: all 0.2s ease-in-out;
}

/* Button hover effect */
/* 悬停时按钮浮起并带阴影 */
.button:hover {
    box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.2);
    transform: translateY(-2px);
}

/* Navigation links */
/* 导航链接样式 */
.nav-link {
    color: var(--color-light);
    text-decoration: none;
    font-family: "American Typewriter", monospace;
    font-size: 1.2rem;
    transition: color 0.2s ease;
}

/* Navigation link hover */
/* 悬停时导航链接变黄色 */
.nav-link:hover {
    color: var(--color-yellow);
}

/* Responsive card layout */
/* 响应式卡片布局：宽屏下横向排列 */
@media (min-width: 768px) {
    .card-container {
        flex-direction: row; /* 横向排列 */
        flex-wrap: wrap; /* 自动换行 */
        justify-content: center;
    }

    .simple-card {
        flex: 1 1 280px; /* 自适应宽度 */
    }
}
